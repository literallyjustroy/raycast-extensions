{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "confluence",
  "title": "Confluence",
  "description": "Quickly navigate, create and search Confluence through Raycast.",
  "icon": "command-icon.png",
  "author": "tbrown",
  "categories": [
    "Productivity",
    "Documentation"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search",
      "subtitle": "Confluence",
      "description": "Search for pages and blogs across Confluence.",
      "mode": "view",
      "preferences": [
        {
          "name": "searchAttachments",
          "label": "Include Attachments",
          "description": "Include attachments in search results.",
          "type": "checkbox",
          "default": false,
          "required": false
        },
        {
          "name": "sort",
          "type": "dropdown",
          "required": false,
          "title": "Sort by",
          "description": "Sort search results by",
          "data": [
            {
              "value": "",
              "title": "--"
            },
            {
              "value": "lastmodified desc",
              "title": "Last modified (desc)"
            },
            {
              "value": "created desc",
              "title": "Created (desc)"
            },
            {
              "value": "title",
              "title": "Title"
            }
          ]
        }
      ]
    },
    {
      "name": "recent",
      "title": "Recent",
      "subtitle": "Confluence",
      "description": "See your recently viewed pages.",
      "mode": "view"
    },
    {
      "name": "people",
      "title": "People",
      "subtitle": "Confluence",
      "description": "Search for people in Confluence.",
      "mode": "view"
    },
    {
      "name": "popular",
      "title": "Popular",
      "subtitle": "Confluence",
      "description": "See what's popular in Confluence.",
      "mode": "view"
    },
    {
      "name": "go",
      "title": "Go",
      "subtitle": "Confluence",
      "description": "Quickly jump to useful places in Confluence.",
      "mode": "view"
    },
    {
      "name": "switch-site",
      "title": "Switch Site",
      "subtitle": "Confluence",
      "description": "Switch your active Confluence site.",
      "mode": "view"
    },
    {
      "name": "new-page",
      "title": "Create Page",
      "subtitle": "Confluence",
      "description": "Create a new page.",
      "mode": "no-view"
    },
    {
      "name": "new-blog",
      "title": "Create Blog",
      "subtitle": "Confluence",
      "description": "Create a new blog.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@apollo/client": "^3.8.7",
    "@raycast/api": "^1.62.1",
    "apollo-link-rest": "^0.9.0",
    "apollo3-cache-persist": "^0.14.1",
    "async-mutex": "^0.4.0",
    "eslint-plugin-import": "^2.29.0",
    "graphql": "^15.8.0",
    "node-fetch": "^3.3.2",
    "qs": "^6.11.2",
    "use-async-effect": "^2.2.7"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.37",
    "eslint": "^7.32.0",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
